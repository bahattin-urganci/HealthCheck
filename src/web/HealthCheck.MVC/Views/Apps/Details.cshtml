@model AppDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>App</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interval)
        </dt>
        <dd class="col-sm-10">
            @Model.Interval.EvaluateToCronExpression()
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Check Time
                    </th>
                    <th>
                        Live
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AppCheckHistories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Live)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
